<link
  href="https://fonts.googleapis.com/css?family=Italiana&display=swap"
  rel="stylesheet"
/>
<link href="/css/notification.css" rel="stylesheet" />
<script src="/client/notification.js"></script>

<div class="container">
  {{#if toastMessage}}
    <p>{{toastMessage}}</p>
  {{/if}}

  <div class="navbar">
    <div class="navbar_logo">
      <div><img src="/images/logopng-after-trim.png" alt="Logo" /></div>
      <div id="MUSE">MUSE</div>
    </div>
    <ul class="navbar_functions">
      <li><a href="/"><span class="icon"><img
              src="/images/home.png"
              id="home_icon"
            /></span>Home</a></li>
      <li id="create-article"><a href="/create_article"><span class="icon"><img
              src="/images/article-line.png"
              id="create_article_icon"
            /></span>Create article</a></li>
      <li><a href="/profile/{{user.User_ID}}"><span class="icon"><img
              src="/images/{{user.Avatar}}"
              id="profile_icon"
            /></span>My Profile</a></li>
      <li><a href="/logout"><span class="icon"><img
              src="/images/logout-box.png"
              id="create_article_icon"
            /></span>Sign Out</a></li>
    </ul>
  </div>

  <div class="frame">
    <div class="ntbar">
      <div id="ntbarText">Notification</div>
    </div>
    <div class="notificationpanel">
      {{#each notificationsList}}
        <div class="notificationtext1">
          <div class="text" id="{{this.Notification_ID}}">{{this.Content}}</div>
          <div class="secondLine">
            <div class="secondLineLeft">
              <div class="headpicture">
                <img
                  class="userImage"
                  src="/images/{{this.Avatar}}"
                  class="avatar"
                /></div>
              <div class="userName">{{this.userName}}</div>
              <div class="publishTime">{{this.Timestamp}}</div>
            </div>

            <div class="deletebutton">
              <a
                href="/delete-notification/{{this.Notification_ID}}"
                class="delete"
              >Delete</a>
            </div>

          </div>
        </div>
      {{/each}}
    </div>

      <div class="pagenumber">
        <div id="left" class="page">&lt;</div>
        {{#each pages}}
          <div class="pages" id="page{{this}}">{{this}}</div>
        {{/each}}
        <div class="page" id="right">&gt;</div>
      </div>

  </div>

</div>