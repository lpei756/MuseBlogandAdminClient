<link rel="stylesheet" href="./css/user_login.css" />
<div class="container">
    {{! Display a message if one was provided. }}


    <div class="login"></div>
    <div class="title">
        <a href="/"><span class="muse">MUSE</span></a>
        <div class="logo"></div>
    </div>
    <div class="frame">
        <div class="panel"></div>
        <a href="/create-account"><span class="dont">Don't have an account? Sign up.</span></a>
        <form action="./user_login" method="POST">
            <input type="password" name="password" class="textpassword"
                placeholder="Please enter your password"></input>
            <span class="forget" onclick="doNothing()"></span>
            <span class="password">Password </span>
            <input type="text" name="username" class="textusername" placeholder="Please enter your name"></input>
            <span class="username">Username</span>
            <button type="submit" class="loginbtn">Log in</button>
        </form>
        <div class="toastMessage">{{toastMessage}}</div>
        <a href="/"><span class="iamadmin"></span></a>
        <span class="psignin">Please sign into your account.</span>
        <span class="signin">Sign in</span>
    </div>
    <div class="navibar">
        <div class="navibarbackground"></div>
        <div class="menu">
            <div id="home-link" class="home"><a href="/"><span class="icon">
                        <img src="/images/home.png" id="home_icon"></span></a></div>
        </div>

        <div class="title">
            <div class="logo"></div><span class="muse">MUSE</span>
        </div>
    </div>
    
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-cookie/1.4.1/jquery.cookie.min.js"></script>
<script>
    $(document).ready(function () {
        var toastMessage = $.cookie('toastMessage');
        if (toastMessage) {
            document.getElementById("toastMessage").textContent = toastMessage;
        }
    });
</script>